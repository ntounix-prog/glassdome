# Glassdome Container Environment
# ================================
# Copy to ../.env and fill in values before running docker-compose

# Database
DATABASE_URL=postgresql+asyncpg://glassdome:your_password@host.docker.internal:5432/glassdome

# Redis (internal Docker network)
REDIS_URL=redis://redis:6379/0

# Proxmox Configuration
PROXMOX_HOST=192.168.215.77
PROXMOX_USER=root@pam
PROXMOX_PASSWORD=your_proxmox_password

# Worker Configuration
WORKER_CONCURRENCY=4
MONITOR_INTERVAL=15

